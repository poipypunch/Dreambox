@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div ng-controller="ChannelController">
    <a href="/permission">Permission</a><br />

    Filter: <input type="text" value="ChannelDesc" ng-model="FilterByChannelDesc" />
    <br />


    <br />
    <input type="button" value="Add" ng-click="add()" />
    <div ng-show="divChannelModification">
        <p>{{Operation}} Channel</p>
        <table>
            <tr>
                <td>
                    <input type="text" style="width:20px;" disabled="disabled" ng-model="ChannelID" />
                </td>


                <td>
                    <input type="text" style="width:94px;" ng-model="ChannelDesc" required ng-required="Channel Name is required." />
                </td>


                <td>
                    <input type="text" style="width:94px;" ng-model="ChannelPath" />
                </td>

                <td>
                   
                    <label>Channel status</label>
                    <div class="form-group">
                        <div class="radio">
                            <label>
                                <input type="radio" name="ChannelStatus" value="Active" ng-model="ChannelStatus">
                                Active
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="ChannelStatus" value="Not Active" ng-model="ChannelStatus">
                                Not Active
                            </label>
                        </div>
                    </div>
                </td>

                <td colspan="2">
                    <input type="button" value="Save" ng-click="Save()" />
                    <input type="button" value="Cancel" ng-click="Cancel()" />
                </td>
            </tr>
        </table>
    </div>
    <table ng-table="tableParams" class="table">
        <tr>
            <td><b>Channel Description</b></td>
            <td><b>Channel Path</b></td>
            <td><b>Channel Status</b></td>
            <td><b>Operation</b></td>
        </tr>
        <tr ng-repeat="channel in $data | filter:FilterByChannelDesc ">
            <td>
                {{channel.ChannelDesc}}
            </td>
            <td>
                {{channel.ChannelPath}}
            </td>
            <td>
                {{channel.ChannelStatus}}
            </td>
            <td>
                <input type="button" value="Edit" ng-click="edit(channel)" />
                <input type="button" value="Delete" ng-click="delete(channel)" />
            </td>
        </tr>
    </table>

</div>

