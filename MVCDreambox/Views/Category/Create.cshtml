@model MVCDreambox.Models.Category

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<h2>@ViewBag.ParentName</h2>
@using (Html.BeginForm("Create", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryDesc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryDesc)
            @Html.ValidationMessageFor(model => model.CategoryDesc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImgPath)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ImgPath)
            @Html.ValidationMessageFor(model => model.ImgPath)
        </div>       
        <div class="editor-field">
            @Html.HiddenFor(model => model.ParentID)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
